<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/todaysAttendanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Attendance: 0.00%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/overallAttendanceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Overall Attendance: 0.00%"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/bunkFor80PercentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lectures you can bunk for 80%: 0"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/attendFor75PercentTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lectures you need to attend for 75%: 0"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:text="Subject-wise Attendance:"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:id="@+id/attendanceContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
